@using System.Data
@model List<BC_House_ASP.Models.Product>



@if (Model.Count != 0)
{
    <table>
        <thead>
            <tr>
                <th>Product</th>
                <th>Prijs</th>
                <th>Omschrijving</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <th>@product.productNaam</th>
                    <th>@product.prijs</th>
                    <th>@product.omschrijving</th>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <span>No results.</span>
}

