@using System.Data
@model List<BC_House_ASP.Models.Product>

@if (Model.Count != 0)
    {
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Product</th>
                    <th>Omschrijving</th>
                    <th>Prijs</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model)
                {
                <tr>
                    <th>@product.productNaam</th>
                    <th>@product.omschrijving</th>
                    <th>€@product.prijs,-</th>
                    <th> <button> +</button></th>
                </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <span>No results.</span>
    }

