@using System.Data
@model List<BC_House_ASP.Models.Product>

<style>
    #TableHead {
        background-color: #c0392b;
        color: white;
    }
</style>


@if (Model.Count != 0)
    {
     <table class="table">
         <thead id="TableHead">
             <tr>
                 <th>Product</th>
                 <th>Omschrijving</th>
                 <th>Prijs</th>
                 <th></th>
             </tr>
         </thead>
         <tbody id="TableBody">
             @foreach (var product in Model)
             {
                 <tr id="Tablerow">
                     <td>@product.productNaam</td>
                     <td>@product.omschrijving</td>
                     <td>€@product.prijs</td>
                     <th> <button type="button" class="btn btn-outline-danger">+</button></th>
                 </tr>
             }
         </tbody>
     </table>
 }
 else
 {
     <span>No results.</span>
 }
