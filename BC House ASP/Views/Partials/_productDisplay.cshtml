
@model List<BC_House_ASP.Models.Product>

<style>
    #TableHead {
        background-color: #c0392b;
        color: white;
    }

    #addbtn {
        background-color: #c0392b;
        color: white;
    }
</style>


@if (Model.Count != 0)
{
    <table class="table">
        <thead id="TableHead">
            <tr>
                <th>Product</th>
                <th>Omschrijving</th>
                <th>Prijs</th>
                <th></th>
            </tr>
        </thead>
        <tbody id="TableBody">
            @foreach (var product in Model)
            {
                <tr id="Tablerow">
                    <td>@product.productNaam</td>
                    <td>@product.omschrijving</td>
                    <td>€@product.prijs</td>
                    <th> <button type="button" class="btn btn-outline-danger" data-toggle="modal" data-target="#exampleModalCenter">+</button></th>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <span>No results.</span>
}



    <!-- Modal -->
    <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLongTitle">Modal title</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="text-right">
                        <input class="spinner" type="number" value="0" min="0" max="100" step="1" />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="button" class="btn" id="addbtn">Toevoegen</button>
                </div>
            </div>
        </div>
    </div>

